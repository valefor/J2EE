<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<div hflex="1" sclass="banner" >
	<div width="960px" >
		<hbox apply="${labels.classes.ctrl.banner}" hflex="1" vflex="min" align="center">
			<a href="/forum/index.zul" hflex="1" vflex="min">
				<image src="/images/logo.png" />
			</a>
			<div width="400px" align="center">
				<label value="${labels.app.welcomeForum}" sclass="banner-head" />
			</div>
			<hbox id="statusBar" pack="end" align="end" height="40px" hflex="1" vflex="1">
				<window id="messageBar" border="no" visible="false"/>
			</hbox>
		</hbox>
	</div>
</div>